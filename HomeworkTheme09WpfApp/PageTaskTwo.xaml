<Page x:Class="HomeworkTheme09WpfApp.PageTaskTwo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeworkTheme09WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTaskTwo">

    <Grid>
        <TextBox Style="{StaticResource textBoxResourse}"
            x:Name="tbUserInputStringTwo"
            HorizontalAlignment="Left" 
            Height="30" 
            Margin="52,68,0,0" 
            Text="Введите предложение" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="639" GotFocus="TbUserInputStringTwo_GotFocus"/>
        <Button Style="{StaticResource buttonResourse}"
            x:Name="btnReversWordsIntoString"
            Content="Переставить слова &#xa;     в предложении" 
            HorizontalAlignment="Left" 
            Margin="262,139,0,0" 
            VerticalAlignment="Top" 
            Width="200" 
            RenderTransformOrigin="2.309,0.155" 
            Height="49" Click="BtnReversWordsIntoString_Click"/>
        <Label  x:Name="lblReversString"
            Content="Получившееся предложение:" 
            Margin="52,210,109,175" 
            VerticalAlignment="Stretch"
            />

    </Grid>
</Page>
